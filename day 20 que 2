#include <stdio.h>
int main() {
    long bin, rem, comp = 0, place = 1;
    printf("Enter a binary number: ");
    scanf("%ld", &bin);
    while (bin > 0) {
        rem = bin % 10;
        comp += (rem == 0 ? 1 : 0) * place;
        place *= 10;
        bin /= 10;
    }
    printf("1's Complement = %ld\n", comp);
    return 0;
}
