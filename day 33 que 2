#include <stdio.h>

int main() {
    int n, i, j, element, arr[100];

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d sorted elements:\n", n);
    for(i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    printf("Enter element to insert: ");
    scanf("%d", &element);

    for(i = n - 1; i >= 0 && arr[i] > element; i--)
        arr[i + 1] = arr[i];

    arr[i + 1] = element;
    n++;

    printf("Array after insertion:\n");
    for(i = 0; i < n; i++)
        printf("%d ", arr[i]);

    return 0;
}
