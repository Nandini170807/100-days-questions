#include <stdio.h>
#include <string.h>

int main() {
    char str[] = "C programming language is powerful";
    int maxLen = 0, currentLen = 0, start = 0, maxStart = 0;

    for (int i = 0; ; i++) {
        if (str[i] == ' ' || str[i] == '\0') {
            if (currentLen > maxLen) {
                maxLen = currentLen;
                maxStart = start;
            }
            currentLen = 0;
            start = i + 1;
            if (str[i] == '\0')
                break;
        } else {
            currentLen++;
        }
    }

    printf("Longest word: ");
    for (int i = 0; i < maxLen; i++) {
        printf("%c", str[maxStart + i]);
    }
    printf("\n");

    return 0;
}
