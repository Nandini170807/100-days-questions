#include <stdio.h>

int main() {
    int arr[] = {1, 3, 5, 7, 9};
    int n = sizeof(arr)/sizeof(arr[0]);
    int x = 6;

    int low = 0, high = n - 1, res = -1;
    while (low <= high) {
        int mid = (low + high) / 2;
        if (arr[mid] >= x) {
            res = mid;
            high = mid - 1; // look for smaller valid element
        } else {
            low = mid + 1;
        }
    }

    printf("Ceil index: %d\n", res);
    return 0;
}
