#include <stdio.h>

int main() {
    int n = 8;
    int total = n * (n + 1) / 2;
    int x = -1;

    for (int i = 1; i <= n; i++) {
        int leftSum = i * (i + 1) / 2;
        int rightSum = total - (i - 1) * i / 2;
        if (leftSum == rightSum) {
            x = i;
            break;
        }
    }

    printf("Pivot integer: %d\n", x);
    return 0;
}
