#include <stdio.h>
#include <string.h>

int main() {
    char str1[] = "ABCD";
    char str2[] = "CDAB";
    char temp[100];

    // concatenate str1 with itself
    strcpy(temp, str1);
    strcat(temp, str1);

    // check if str2 is a substring of temp
    if (strstr(temp, str2))
        printf("'%s' is a rotation of '%s'\n", str2, str1);
    else
        printf("'%s' is NOT a rotation of '%s'\n", str2, str1);

    return 0;
}
