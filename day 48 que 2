#include <stdio.h>
#include <string.h>

void reverseWord(char *start, char *end) {
    while (start < end) {
        char temp = *start;
        *start = *end;
        *end = temp;
        start++;
        end--;
    }
}

int main() {
    char str[] = "Hello world from C";
    char *wordStart = str;
    char *ptr = str;

    while (*ptr != '\0') {
        if (*ptr == ' ') {
            reverseWord(wordStart, ptr - 1);
            wordStart = ptr + 1;
        }
        ptr++;
    }

    // reverse the last word
    reverseWord(wordStart, ptr - 1);

    printf("Reversed words: %s\n", str);

    return 0;
}
